<%= form_for([post, comment]) do |f| %>
  <% if comment.errors.any? %>
    <div class="error-messages">
      <ul>
        <% comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <div>
      <%= f.label :status %><br>
      <%= f.select :status, Visible::VALID_STATUSES, selected: 'public'%>
    </div>
  <br>
    <p>
      <%= f.submit %>
    </p>
  <% end %>