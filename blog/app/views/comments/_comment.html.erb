
<% unless comment.archived? %>
  <p>
    <strong>By:</strong>
    <%= comment.user ? comment.user.username : "Unknown" %>
    <%= %>
  </p>
  
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <p>
  <% if current_user && (current_user.id == comment.user_id || current_user.id == @post.user_id) %>
    <%= link_to 'Delete Comment', [comment.post, comment],
                 data: {  turbo_method: :delete, 
                          turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  <% end %>
  <p>-----------------------------------------------------------------</p>
  </p>
<% end %>